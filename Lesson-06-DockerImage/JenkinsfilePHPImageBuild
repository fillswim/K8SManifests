pipeline {
    agent {
        label 'builder'
    }

    stages {
        stage('Git pull') {
            steps {
                echo "====== Git pull ======"
                sh 'git pull origin master'
            }
        }

        stage('Remove old docker image') {
            steps {
                echo "====== Remove old image ======"
                sh 'docker rmi -f fillswim/myphpimage:latest'
            }
        }

        stage('Docker build') {
            steps {
                echo "====== Docker build ======"
                sh 'pwd'
                sh 'docker build -t fillswim/myphpimage:latest .'
            }

        }

        stage('Docker login') {
            steps {
                echo "======== Docker login ========"
                sh 'cat /home/filldocker/dockerhub_token.txt | docker login --username fillswim --password-stdin'
            }
        }

        stage('Docker push') {

            environment {
                DISCRORD_WEBHOOK_LINK = credentials('Discord_webhook')
            }

            steps {
                echo "======== Docker push ========"
                sh 'docker push fillswim/myphpimage:latest'

                discordSend description: "PHPImage Build",
                link: env.BUILD_URL,
                result: currentBuild.currentResult,
                title: JOB_NAME,
                webhookURL: DISCRORD_WEBHOOK_LINK

            }
        }

    }
}